###############################
#       AI Model Settings
###############################
GENERATION_MODELS=qwen2.5:7b,deepseek-r1:7b,llama3.2:3b,phi4,mistral           # Default model architecture and size for text generation qwen2.5:7b,deepseek-r1:7b,llama3.2:3b,phi4,mistral
